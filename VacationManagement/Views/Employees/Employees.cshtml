@model IEnumerable<VacationManagement.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}
<div class="row">
    <div class="col-md-12">

<h4>Employees</h4>

<p>
    <a asp-action="Create" class="btn btn-info">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VacationBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentId)
            </th>
            
            <th>Events</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VacationBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.Name)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id  },htmlAttributes:new {@class="btn btn-info"}) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.Id  },htmlAttributes:new {@class="btn btn-danger"})
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>