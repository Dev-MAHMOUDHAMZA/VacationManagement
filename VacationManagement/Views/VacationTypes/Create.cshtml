@model VacationManagement.Models.VacationType

@{
    ViewData["Title"] = "Create";
}

<script src='~/js/spectrum.js'></script>
<link rel='stylesheet' href='~/css/spectrum.css'/>

<h4>Create VacationType</h4>
<hr />
@if(ViewBag.ErrorMsg == false){<h4 class="alert alert-danger">Vacation Registred ...........</h4>}
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VacationName" class="control-label"></label>
                <input asp-for="VacationName" class="form-control" />
                <span asp-validation-for="VacationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="backgroundColor" class="control-label"></label>
                <input asp-for="backgroundColor" readonly class="form-control" id="backgroundColor"/>
                <span asp-validation-for="backgroundColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberDays" class="control-label"></label>
                <input asp-for="NumberDays" class="form-control" />
                <span asp-validation-for="NumberDays" class="text-danger"></span>
            </div>
   
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
   
}
 <script>
$("#backgroundColor").spectrum({
    color:"#000",
    preferredFormat: "hex",
    showInput: true
});
$("#backgroundColor").show();
</script>